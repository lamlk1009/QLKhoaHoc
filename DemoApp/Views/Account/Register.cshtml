@model DemoApp.ViewModels.RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Đăng ký tài khoản";
}

@section Styles {
    <style>
        :root {
            --primary: #6366f1;
            --primary-hover: #4f46e5;
            --bg: #f3f4f6;
            --card-bg: rgba(255,255,255,0.8);
            --text: #1e293b;
            --text-light: #64748b;
            --error: #dc2626;
            --radius: 18px;
        }

        body {
            background: linear-gradient(135deg, #a5b4fc, #818cf8);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 25px;
        }

        /* Card */
        .register-card {
            max-width: 640px;
            width: 100%;
            background: var(--card-bg);
            backdrop-filter: blur(14px);
            border-radius: var(--radius);
            padding: 40px 48px;
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
            border: 1px solid rgba(255,255,255,0.35);
        }

            .register-card h1 {
                text-align: center;
                font-size: 2rem;
                font-weight: 800;
                color: var(--text);
                margin-bottom: 10px;
            }

            .register-card p.subtitle {
                text-align: center;
                color: var(--text-light);
                margin-bottom: 40px;
                font-size: 1rem;
            }

        /* Title */
        .section-title {
            font-size: 1.3rem;
            font-weight: 700;
            margin: 25px 0 15px;
            color: var(--text);
        }

        /* Form layout */
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 18px;
        }

        .form-group label {
            font-weight: 500;
            margin-bottom: 6px;
            display: block;
            color: var(--text);
        }

        input.form-input {
            width: 100%;
            padding: 14px 18px;
            background: #fff;
            border-radius: var(--radius);
            border: 1px solid #e2e8f0;
            font-size: 1rem;
            color: #111;
            transition: all .25s;
        }

            input.form-input:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(99,102,241,0.25);
                outline: none;
            }

        /* Password show */
        .password-input-wrapper {
            position: relative;
        }

            .password-input-wrapper button {
                position: absolute;
                right: 12px;
                top: 50%;
                transform: translateY(-50%);
                background: none;
                border: none;
                color: var(--text-light);
                cursor: pointer;
            }

        /* Checkbox */
        .checkbox-group,
        .terms-checkbox-group {
            margin-top: 12px;
            color: var(--text-light);
            font-size: .95rem;
        }

            .checkbox-group input,
            .terms-checkbox-group input {
                width: 18px;
                height: 18px;
                accent-color: var(--primary);
                margin-right: 6px;
            }

        /* Buttons */
        .form-actions {
            margin-top: 35px;
            display: flex;
            gap: 15px;
        }

        .btn-secondary {
            padding: 14px 22px;
            border-radius: var(--radius);
            background: #e2e8f0;
            color: #111;
            text-decoration: none;
            font-weight: 600;
            transition: .25s;
        }

            .btn-secondary:hover {
                background: #cbd5e1;
            }

        .btn-primary {
            flex: 1;
            padding: 15px;
            background: var(--primary);
            color: #fff;
            border: none;
            border-radius: var(--radius);
            font-weight: 700;
            cursor: pointer;
            transition: .25s;
        }

            .btn-primary:hover {
                background: var(--primary-hover);
            }

        /* Error box */
        .error-message {
            background: rgba(239,68,68,0.11);
            border: 1px solid rgba(239,68,68,0.35);
            color: var(--error);
            padding: 14px;
            border-radius: var(--radius);
            margin-bottom: 20px;
            font-size: .95rem;
        }

        .field-validation-error {
            color: var(--error);
            font-size: .85rem;
            margin-top: 4px;
        }

        @@media(max - width:768px) {
            .form-row

        {
            grid-template-columns: 1fr;
        }

        .register-card {
            padding: 30px;
        }

        }</style>
}

<div class="register-card">

    <h1>Đăng ký tài khoản</h1>
    <p class="subtitle">Mất 30 giây để trở thành thành viên LSV</p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-message">
            Vui lòng kiểm tra lại thông tin. Có lỗi xảy ra.
            <div asp-validation-summary="ModelOnly"></div>
        </div>
    }

    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()

        <!-- Thông tin cá nhân -->
        <h2 class="section-title">Thông tin cá nhân</h2>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-input" placeholder="Nguyễn Văn A" />
                <span asp-validation-for="FullName" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-input" placeholder="090xxxxxxx" />
                <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-input" placeholder="Số nhà, đường,..." />
                <span asp-validation-for="Address" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-input" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="field-validation-error"></span>

                <div class="checkbox-group">
                    <input type="checkbox" asp-for="ReceivePromotion" />
                    <label asp-for="ReceivePromotion">Gửi hóa đơn VAT qua email</label>
                </div>
            </div>
        </div>

        <!-- Mật khẩu -->
        <h2 class="section-title">Tạo mật khẩu</h2>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="password-input-wrapper">
                    <input asp-for="Password" type="password" class="form-input" />
                    <button type="button" onclick="togglePass(this)">Hiện</button>
                </div>
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="password-input-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="form-input" />
                    <button type="button" onclick="togglePass(this)">Hiện</button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
            </div>
        </div>

        <!-- Điều khoản -->
        <div class="terms-checkbox-group">
            <label style="display:flex;align-items:flex-start;gap:10px;">
                <input asp-for="AcceptTerms" type="checkbox" />
                <span>
                    Tôi đồng ý với <a href="#">Điều khoản</a> và <a href="#">Chính sách bảo mật</a>.
                </span>
            </label>
            <span asp-validation-for="AcceptTerms" class="field-validation-error"></span>
        </div>

        <!-- Button -->
        <div class="form-actions">
            <a class="btn-secondary" asp-controller="Account" asp-action="Login">Quay lại</a>
            <button type="submit" class="btn-primary">Hoàn tất đăng ký</button>
        </div>

    </form>
</div>

@section Scripts {
    <script>
        function togglePass(btn) {
            const input = btn.previousElementSibling;
            if (input.type === "password") {
                input.type = "text";
                btn.textContent = "Ẩn";
            } else {
                input.type = "password";
                btn.textContent = "Hiện";
            }
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
