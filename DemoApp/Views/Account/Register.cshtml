@model DemoApp.ViewModels.RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Đăng ký tài khoản";
}

@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --primary-hover: #3a56d4;
            --accent: #06b6d4;
            --success: #10b981;
            --error: #ef4444;
            --border: #e2e8f0;
            --bg-card: #ffffff;
            --text: #1e293b;
            --text-light: #64748b;
            --shadow-sm: 0 4px 15px rgba(67, 97, 238, 0.1);
            --shadow-lg: 0 20px 50px rgba(67, 97, 238, 0.15);
            --radius: 20px;
        }

        body {
            background: #f8fafc;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-container {
            max-width: 720px;
            width: 100%;
        }

        .register-card {
            background: var(--bg-card);
            border-radius: var(--radius);
            padding: 48px 56px;
            box-shadow: var(--shadow-lg);
            border: 1px solid rgba(67, 97, 238, 0.1);
            position: relative;
            overflow: hidden;
        }

            /* Hiệu ứng viền gradient nhẹ */
            .register-card::before {
                content: '';
                position: absolute;
                inset: 0;
                padding: 2px;
                background: linear-gradient(135deg, #c3dafe, #ddd6fe, #fde68a);
                border-radius: var(--radius);
                mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                mask-composite: exclude;
                -webkit-mask-composite: destination-out;
                pointer-events: none;
            }

        .card-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .card-header h1 {
                font-size: 2.6rem;
                font-weight: 800;
                background: linear-gradient(135deg, #4361ee, #06b6d4);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin: 0 0 12px 0;
            }

            .card-header p {
                color: var(--text-light);
                font-size: 1.1rem;
                margin: 0;
            }

        .section-title {
            font-size: 1.35rem;
            font-weight: 700;
            color: var(--primary);
            margin: 32px 0 18px;
            position: relative;
            padding-left: 24px;
        }

            .section-title::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 6px;
                height: 28px;
                background: linear-gradient(to bottom, var(--primary), var(--accent));
                border-radius: 4px;
            }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 22px;
            margin-bottom: 8px;
        }

        .form-group {
            margin-bottom: 6px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 600;
                color: var(--text);
                font-size: 0.98rem;
            }

        input.form-input {
            width: 100%;
            padding: 16px 20px;
            border: 2px solid var(--border);
            border-radius: 16px;
            font-size: 1rem;
            background: #fff;
            transition: all 0.25s ease;
        }

            input.form-input:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.15);
                transform: translateY(-1px);
            }

        .password-input-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-light);
            font-size: 0.9rem;
            cursor: pointer;
            padding: 4px 8px;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .password-toggle:hover {
                background: rgba(67, 97, 238, 0.1);
                color: var(--primary);
            }

        .checkbox-group,
        .terms-checkbox-group {
            margin: 16px 0;
            display: flex;
            align-items: flex-start;
            gap: 10px;
            font-size: 0.95rem;
            color: var(--text-light);
        }

            .checkbox-group input,
            .terms-checkbox-group input {
                width: 20px;
                height: 20px;
                accent-color: var(--primary);
                margin-top: 2px;
            }

            .terms-checkbox-group a {
                color: var(--primary);
                text-decoration: underline;
                font-weight: 500;
            }

        .form-actions {
            margin-top: 40px;
            display: flex;
            gap: 16px;
            justify-content: space-between;
        }

        .btn {
            padding: 16px 28px;
            border-radius: 14px;
            font-weight: 600;
            font-size: 1.02rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-secondary {
            background: #f1f5f9;
            color: var(--text);
            border: 2px solid #e2e8f0;
        }

            .btn-secondary:hover {
                background: #e2e8f0;
                transform: translateY(-2px);
            }

        .btn-primary {
            flex: 1;
            background: var(--primary);
            color: white;
            border: none;
            box-shadow: 0 8px 20px rgba(67, 97, 238, 0.3);
        }

            .btn-primary:hover {
                background: var(--primary-hover);
                transform: translateY(-3px);
                box-shadow: 0 12px 28px rgba(67, 97, 238, 0.4);
            }

        .error-message {
            background: #fef2f2;
            border: 1px solid #fca5a5;
            color: var(--error);
            padding: 16px 20px;
            border-radius: 14px;
            margin-bottom: 24px;
            font-size: 0.95rem;
        }

        .field-validation-error {
            color: var(--error);
            font-size: 0.88rem;
            margin-top: 6px;
            display: block;
        }

        @@media (max-width: 768px) {
            .register-card

        {
            padding: 36px 32px;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-primary {
            order: -1;
        }

        }</style>
}

<div class="register-container">
    <div class="register-card">
        <div class="card-header">
            <h1>Đăng ký tài khoản</h1>
            <p>Chỉ mất 30 giây để trở thành thành viên của chúng tôi</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                <strong>Có lỗi xảy ra!</strong> Vui lòng kiểm tra lại thông tin bên dưới.
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        }

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <!-- Thông tin cá nhân -->
            <h2 class="section-title">Thông tin cá nhân</h2>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FullName">Họ và tên</label>
                    <input asp-for="FullName" class="form-input" placeholder="Nguyễn Văn A" />
                    <span asp-validation-for="FullName" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-input" placeholder="0901234567" />
                    <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Address">Địa chỉ</label>
                    <input asp-for="Address" class="form-input" placeholder="Số nhà, đường, phường/xã..." />
                    <span asp-validation-for="Address" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" class="form-input" placeholder="you@example.com" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
            </div>

            <div class="checkbox-group">
                <input type="checkbox" asp-for="ReceivePromotion" />
                <label asp-for="ReceivePromotion">Gửi thông tin khuyến mãi và hóa đơn qua email</label>
            </div>

            <!-- Mật khẩu -->
            <h2 class="section-title">Tạo mật khẩu</h2>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <div class="password-input-wrapper">
                        <input asp-for="Password" type="password" class="form-input" />
                        <button type="button" class="password-toggle" onclick="togglePass(this)">Hiện</button>
                    </div>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <div class="password-input-wrapper">
                        <input asp-for="ConfirmPassword" type="password" class="form-input" />
                        <button type="button" class="password-toggle" onclick="togglePass(this)">Hiện</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>
            </div>

            <!-- Điều khoản -->
            <div class="terms-checkbox-group">
                <label style="display:flex; align-items:flex-start; gap:10px; cursor:pointer;">
                    <input asp-for="AcceptTerms" type="checkbox" />
                    <span>
                        Tôi đã đọc và đồng ý với <a href="#" target="_blank">Điều khoản dịch vụ</a> và
                        <a href="#" target="_blank">Chính sách bảo mật</a> của hệ thống.
                    </span>
                </label>
                <span asp-validation-for="AcceptTerms" class="field-validation-error"></span>
            </div>

            <!-- Nút hành động -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    Hoàn tất đăng ký
                </button>
                <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">
                    Đã có tài khoản? Đăng nhập
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function togglePass(btn) {
            const input = btn.previousElementSibling;
            if (input.type === "password") {
                input.type = "text";
                btn.textContent = "Ẩn";
            } else {
                input.type = "password";
                btn.textContent = "Hiện";
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}