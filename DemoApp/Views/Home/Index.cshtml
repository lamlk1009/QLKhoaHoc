@{
    ViewData["Title"] = "Trang chủ - LSV";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <style>
        :root {
            --primary: #6366f1;
            --primary-hover: #4f46e5;
            --gradient: linear-gradient(135deg, #818cf8 0%, #c084fc 50%, #ec4899 100%);
            --text: #1e293b;
            --text-light: #64748b;
            --bg-light: #f8fafc;
            --card-bg: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--bg-light);
            color: var(--text);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            line-height: 1.6;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 40px;
        }

        /* ==================== HERO ==================== */
        .hero-section {
            padding: 140px 0 100px;
            background: var(--gradient);
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.15) 0%, transparent 50%), radial-gradient(circle at 70% 80%, rgba(255,255,255,0.1) 0%, transparent 50%);
            }

            .hero-section::after {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: repeating-linear-gradient(45deg, transparent, transparent 60px, rgba(255,255,255,.04) 60px, rgba(255,255,255,.04) 120px);
                animation: shine 30s linear infinite;
            }

        @@keyframes shine {
            0%

        {
            transform: translateX(-100%) translateY(-100%);
        }

        100% {
            transform: translateX(100%) translateY(100%);
        }

        }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 1000px;
            margin: 0 auto;
            text-align: center;
        }

        .hero-text h1 {
            font-size: 4.5rem;
            font-weight: 900;
            line-height: 1.1;
            margin-bottom: 32px;
            color: white;
            letter-spacing: -0.03em;
        }

        .highlight {
            background: linear-gradient(to right, #fef3c7, #fde68a);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }

        .hero-description {
            font-size: 1.35rem;
            line-height: 1.8;
            margin-bottom: 24px;
            color: white;
            opacity: 0.95;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
        }

        .hero-features {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin: 48px 0;
            max-width: 850px;
            margin-left: auto;
            margin-right: auto;
        }

        .feature-item {
            display: flex;
            align-items: flex-start;
            gap: 16px;
            font-size: 1.15rem;
            font-weight: 500;
            color: white;
            text-align: left;
            background: rgba(255, 255, 255, 0.12);
            padding: 20px 28px;
            border-radius: 16px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
            transition: all 0.3s;
        }

            .feature-item:hover {
                background: rgba(255, 255, 255, 0.18);
                transform: translateX(8px);
            }

            .feature-item i {
                color: #fde68a;
                font-size: 1.5rem;
                margin-top: 2px;
                min-width: 24px;
            }

        .btn-primary-large {
            display: inline-block;
            padding: 22px 48px;
            background: white;
            color: #4c1d95;
            font-weight: 800;
            font-size: 1.25rem;
            border-radius: 16px;
            text-decoration: none;
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            transition: all 0.4s;
            margin-top: 24px;
        }

            .btn-primary-large:hover {
                transform: translateY(-4px);
                box-shadow: 0 25px 50px rgba(0,0,0,0.2);
            }

        /* ==================== COURSES ==================== */
        .courses-section {
            padding: 140px 0;
            background: white;
        }

        .section-header {
            text-align: center;
            margin-bottom: 80px;
        }

        .section-title {
            font-size: 3.5rem;
            font-weight: 900;
            margin-bottom: 20px;
            color: var(--text);
            letter-spacing: -0.02em;
        }

        .section-subtitle {
            font-size: 1.4rem;
            color: var(--text-light);
            font-weight: 500;
        }

        .courses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
            gap: 40px;
            margin-bottom: 80px;
        }

        .course-card {
            background: white;
            border-radius: 28px;
            overflow: hidden;
            border: 2px solid #e2e8f0;
            transition: all 0.4s;
            box-shadow: 0 4px 20px rgba(0,0,0,0.04);
        }

            .course-card:hover {
                transform: translateY(-12px);
                box-shadow: 0 30px 60px rgba(99,102,241,0.15);
                border-color: var(--primary);
            }

        .course-image {
            position: relative;
            overflow: hidden;
        }

            .course-image img {
                width: 100%;
                height: 240px;
                object-fit: cover;
                transition: transform 0.4s;
            }

        .course-card:hover .course-image img {
            transform: scale(1.05);
        }

        .course-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 700;
            background: #10b981;
            color: white;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

            .course-badge.hot {
                background: #ef4444;
                box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
            }

        .course-content {
            padding: 32px;
        }

        .course-title {
            font-size: 1.65rem;
            font-weight: 800;
            margin-bottom: 16px;
            color: var(--text);
            line-height: 1.3;
        }

        .course-description {
            color: var(--text-light);
            line-height: 1.7;
            margin-bottom: 24px;
            font-size: 1.05rem;
        }

        .course-meta {
            display: flex;
            gap: 24px;
            margin-bottom: 28px;
            color: var(--text-light);
            font-size: 1rem;
            font-weight: 600;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .meta-item i {
                color: var(--primary);
                font-size: 1.1rem;
            }

        .course-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 24px;
            border-top: 2px solid #f1f5f9;
        }

        .course-price .price-current {
            font-size: 2rem;
            font-weight: 900;
            background: linear-gradient(135deg, #10b981, #059669);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-course {
            padding: 14px 28px;
            background: var(--primary);
            color: white;
            border-radius: 14px;
            text-decoration: none;
            font-weight: 700;
            transition: all 0.3s;
            font-size: 1.05rem;
        }

            .btn-course:hover {
                background: var(--primary-hover);
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
            }

        /* ==================== WHY CHOOSE ==================== */
        .why-choose-section {
            padding: 140px 0;
            background: var(--bg-light);
        }

        .benefits-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
        }

        .benefit-card {
            text-align: center;
            padding: 48px 32px;
            background: white;
            border-radius: 28px;
            border: 2px solid #e2e8f0;
            transition: all 0.4s;
        }

            .benefit-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 25px 50px rgba(99,102,241,0.12);
                border-color: var(--primary);
            }

        .benefit-icon {
            width: 100px;
            height: 100px;
            margin: 0 auto 28px;
            background: linear-gradient(135deg, rgba(99,102,241,0.1), rgba(168,85,247,0.1));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .benefit-icon i {
                color: var(--primary);
                font-size: 3rem;
            }

        .benefit-title {
            font-size: 1.65rem;
            font-weight: 800;
            margin-bottom: 16px;
            color: var(--text);
        }

        .benefit-description {
            color: var(--text-light);
            line-height: 1.7;
            font-size: 1.05rem;
        }

        /* ==================== CTA ==================== */
        .cta-section {
            padding: 140px 0;
            background: var(--gradient);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .cta-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 50% 50%, rgba(255,255,255,0.1) 0%, transparent 70%);
            }

        .cta-content {
            max-width: 900px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .cta-title {
            font-size: 3.8rem;
            font-weight: 900;
            margin-bottom: 28px;
            color: white;
            letter-spacing: -0.02em;
            line-height: 1.2;
        }

        .cta-description {
            font-size: 1.4rem;
            margin-bottom: 48px;
            color: white;
            opacity: 0.95;
        }

        .cta-buttons {
            display: flex;
            gap: 24px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-cta-primary {
            padding: 22px 48px;
            background: white;
            color: #4c1d95;
            font-weight: 800;
            font-size: 1.25rem;
            border-radius: 16px;
            text-decoration: none;
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            transition: all 0.4s;
        }

            .btn-cta-primary:hover {
                transform: translateY(-4px);
                box-shadow: 0 25px 50px rgba(0,0,0,0.2);
            }

        /* Responsive */
        @@media (max-width: 992px) {
            .hero-text h1

        {
            font-size: 3.5rem;
        }

        .section-title {
            font-size: 2.8rem;
        }

        .cta-title {
            font-size: 3rem;
        }

        }

        @@media (max-width: 640px) {
            .container

        {
            padding: 0 24px;
        }

        .hero-section {
            padding: 100px 0 60px;
        }

        .hero-text h1 {
            font-size: 2.5rem;
        }

        .hero-description {
            font-size: 1.15rem;
        }

        .section-title {
            font-size: 2.2rem;
        }

        .cta-title {
            font-size: 2.3rem;
        }

        .courses-grid {
            grid-template-columns: 1fr;
        }

        }</style>
}

