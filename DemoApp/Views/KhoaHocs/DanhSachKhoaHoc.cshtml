@model List<DemoApp.Models.KhoaHoc>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Danh Sách Khóa Học - LSV";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <style>
        :root {
            --primary: #5d5fef;
            --primary-light: #818cf8;
            --bg: #f8fafc;
            --card-bg: #ffffff;
            --text: #1e293b;
            --text-light: #64748b;
            --border: #e2e8f0;
            --shadow: 0 10px 25px rgba(0,0,0,0.08);
            --radius: 16px;
        }

        body {
            background: var(--bg);
            color: var(--text);
            font-family: 'Inter', system-ui, sans-serif;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header nhẹ nhàng */
        .page-header {
            text-align: center;
            padding: 80px 0 60px;
            background: linear-gradient(135deg, #eef2ff 0%, #e0e7ff 100%);
            border-radius: 0 0 32px 32px;
            margin-bottom: 60px;
        }

        .page-title {
            font-size: 2.8rem;
            font-weight: 800;
            color: #4c1d95;
            margin-bottom: 12px;
        }

        .page-subtitle {
            font-size: 1.2rem;
            color: #6366f1;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Grid khóa học nhỏ gọn */
        .courses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 28px;
            padding: 20px 0 80px;
        }

        .course-card {
            background: var(--card-bg);
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            border: 1px solid var(--border);
        }

            .course-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(93, 95, 254, 0.15);
            }

        .course-image-wrapper {
            position: relative;
            overflow: hidden;
            height: 180px;
        }

            .course-image-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

        .course-card:hover .course-image-wrapper img {
            transform: scale(1.08);
        }

        .course-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            background: #10b981;
            color: white;
            padding: 6px 12px;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 700;
        }

        .course-content {
            padding: 24px;
        }

        .course-title {
            font-size: 1.35rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 10px;
            line-height: 1.3;
        }

        .course-desc {
            color: var(--text-light);
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 16px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .course-features {
            margin: 16px 0;
            padding-left: 4px;
        }

        .feature {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9rem;
            color: #10b981;
            margin-bottom: 6px;
        }

        .course-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 20px;
        }

        .course-price {
            font-size: 1.8rem;
            font-weight: 800;
            color: #10b981;
        }

        .btn-enroll {
            padding: 12px 24px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-enroll:hover {
                background: #4c1d95;
                transform: translateY(-2px);
            }

        .empty-state {
            text-align: center;
            padding: 100px 20px;
            color: var(--text-light);
        }

            .empty-state i {
                font-size: 4rem;
                color: #c4b5fd;
                margin-bottom: 20px;
            }

        @@media (max-width: 640px) {
            .page-title

        {
            font-size: 2.2rem;
        }

        .courses-grid {
            grid-template-columns: 1fr;
        }

        }</style>
}

<!-- Page Header Sáng -->
<div class="page-header">
    <div class="container">
        <h1 class="page-title">Danh Sách Khóa Học</h1>
        <p class="page-subtitle">Học lập trình miễn phí – chất lượng cao – bám sát yêu cầu tuyển dụng</p>
    </div>
</div>

<main class="container">
    @if (Model != null && Model.Any())
    {
        <div class="courses-grid">
            @foreach (var khoaHoc in Model)
            {
                <div class="course-card">
                    <div class="course-image-wrapper">
                        <a asp-action="ChiTietKhoaHoc" asp-controller="KhoaHocs" asp-route-id="@khoaHoc.Id">
                            <img src="/images/@khoaHoc.AnhBia" alt="@khoaHoc.TenKhoaHoc" />
                        </a>
                        <span class="course-badge">MIỄN PHÍ</span>
                    </div>

                    <div class="course-content">
                        <h3 class="course-title">@khoaHoc.TenKhoaHoc</h3>
                        <p class="course-desc">@khoaHoc.MoTaNgan</p>

                        <div class="course-features">
                            <div class="feature">Video bài giảng chi tiết</div>
                            <div class="feature">Bài tập + chấm tự động</div>
                            <div class="feature">Hỗ trợ 24/7</div>
                        </div>

                        <div class="course-footer">
                            <div class="course-price">FREE</div>

                            <form asp-controller="MyCourses" asp-action="Enroll" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@khoaHoc.Id" />
                                <button type="submit" class="btn-enroll">
                                    Học ngay
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>Chưa có khóa học nào được đăng tải.</p>
            <p>Hãy quay lại sau nhé!</p>
        </div>
    }
</main>