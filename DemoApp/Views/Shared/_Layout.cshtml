<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TTHKCODE</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --primary: #6366f1;
            --primary-hover: #4f46e5;
            --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --glass: rgba(255, 255, 255, 0.1);
            --glass-border: rgba(255, 255, 255, 0.15);
            --text: #f8fafc;
            --text-light: #cbd5e1;
            --shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #0f172a;
            color: var(--text);
            min-height: 100vh;
        }

        /* ==================== HEADER ==================== */
        .main-header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            height: 80px;
            background: rgba(15, 23, 42, 0.7);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid var(--glass-border);
            box-shadow: var(--shadow);
        }

        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
        }

        .logo {
            font-size: 2rem;
            font-weight: 800;
            background: linear-gradient(to right, #a78bfa, #c4b5fd);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-decoration: none;
            letter-spacing: -1px;
        }

        .nav-menu {
            display: flex;
            gap: 36px;
        }

        .nav-link {
            color: var(--text-light);
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link:hover,
            .nav-link.active {
                color: white;
            }

                .nav-link.active::after {
                    content: '';
                    position: absolute;
                    bottom: -8px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 30px;
                    height: 3px;
                    background: var(--primary);
                    border-radius: 2px;
                }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .auth-buttons {
            display: flex;
            gap: 12px;
        }

        .btn-login, .btn-register {
            padding: 10px 24px;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
        }

        .btn-login {
            background: transparent;
            color: white;
            border: 1.5px solid var(--glass-border);
        }

            .btn-login:hover {
                background: rgba(255,255,255,0.1);
                border-color: var(--primary);
            }

        .btn-register {
            background: var(--primary);
            color: white;
            border: none;
        }

            .btn-register:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(99,102,241,0.4);
            }

        /* User Menu */
        .user-menu {
            position: relative;
        }

        .user-button {
            background: var(--glass);
            border: 1.5px solid var(--glass-border);
            color: white;
            padding: 10px 16px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            backdrop-filter: blur(10px);
        }

            .user-button:hover {
                background: rgba(255,255,255,0.15);
                border-color: var(--primary);
            }

        .dropdown-menu {
            position: absolute;
            top: 100%;
            right: 0;
            margin-top: 12px;
            background: rgba(30, 41, 59, 0.95);
            border-radius: 16px;
            overflow: hidden;
            min-width: 220px;
            box-shadow: var(--shadow);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
        }

        .user-menu:hover .dropdown-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .dropdown-item {
            padding: 14px 18px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: var(--text-light);
            text-decoration: none;
            transition: all 0.2s;
        }

            .dropdown-item:hover {
                background: rgba(99,102,241,0.2);
                color: white;
            }

            .dropdown-item.logout:hover {
                background: rgba(239,68,68,0.3);
                color: #fca5a5;
            }

        .dropdown-divider {
            height: 1px;
            background: var(--glass-border);
            margin: 8px 0;
        }

        /* Mobile Toggle */
        .mobile-menu-toggle {
            display: none;
            flex-direction: column;
            gap: 5px;
            background: none;
            border: none;
            cursor: pointer;
        }

            .mobile-menu-toggle span {
                width: 28px;
                height: 3px;
                background: white;
                border-radius: 2px;
                transition: all 0.3s;
            }

        /* Mobile Menu */
        .mobile-menu {
            position: fixed;
            top: 80px;
            left: 0;
            right: 0;
            background: rgba(15, 23, 42, 0.98);
            backdrop-filter: blur(20px);
            padding: 20px 30px;
            transform: translateY(-100%);
            transition: transform 0.4s ease;
            z-index: 999;
        }

            .mobile-menu.active {
                transform: translateY(0);
            }

        .mobile-nav {
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin-bottom: 30px;
        }

        .mobile-nav-link {
            padding: 14px 0;
            color: var(--text-light);
            text-decoration: none;
            font-weight: 500;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

            .mobile-nav-link.active,
            .mobile-nav-link:hover {
                color: var(--primary);
            }

        .mobile-actions {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .btn-mobile {
            padding: 14px 20px;
            background: var(--primary);
            color: white;
            border-radius: 12px;
            text-align: center;
            font-weight: 600;
            text-decoration: none;
        }

        .btn-mobile-outline {
            padding: 14px 20px;
            background: transparent;
            border: 1.5px solid var(--glass-border);
            color: white;
            border-radius: 12px;
            text-align: center;
            font-weight: 600;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .nav-menu, .header-actions .auth-buttons

        {
            display: none;
        }

        .mobile-menu-toggle {
            display: flex;
        }

        }

        @@media (max-width: 576px) {
            .header-container

        {
            padding: 0 20px;
        }

        .logo {
            font-size: 1.6rem;
        }

        }

        main {
            margin-top: 80px;
            min-height: calc(100vh - 80px);
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    @if (!Context.Request.Path.StartsWithSegments("/Admin"))
    {
        <!-- Modern Header -->
        <header class="main-header">
            <div class="header-container">
                <a href="/" class="logo">LSV</a>

                <nav class="nav-menu">
                    <a href="/" class="nav-link @(Context.Request.Path == "/" ? "active" : "")">Trang Chủ</a>
                    <a asp-action="DanhSachKhoaHoc" asp-controller="KhoaHocs" class="nav-link">Khóa Học</a>
                    <a href="https://blog.28tech.com.vn/" class="nav-link">Blog</a>
                    <a href="https://www.youtube.com/c/G%C3%A0L%E1%BA%A1iL%E1%BA%ADpTr%C3%ACnh" class="nav-link">YouTube</a>
                </nav>

                <div class="header-actions">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="user-menu">
                            <button class="user-button">
                                <i class="fas fa-user-circle"></i>
                                <span>@User.Identity.Name</span>
                                <i class="fas fa-chevron-down" style="font-size:0.8rem;margin-left:8px;"></i>
                            </button>
                            <div class="dropdown-menu">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="/admin" class="dropdown-item">
                                        <i class="fas fa-crown"></i> Trang Admin
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Users" asp-action="Index" class="dropdown-item">
                                        <i class="fas fa-user"></i> Tài khoản của tôi
                                    </a>
                                    <a asp-controller="MyCourses" asp-action="Index" class="dropdown-item">
                                        <i class="fas fa-book-open"></i> Khóa học của tôi
                                    </a>
                                }
                                <div class="dropdown-divider"></div>
                                <a asp-controller="Account" asp-action="Logout" class="dropdown-item logout">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="auth-buttons">
                            <a href="/account/login" class="btn-login">Đăng nhập</a>
                            <a href="/account/register" class="btn-register">Đăng ký</a>
                        </div>
                    }

                    <button class="mobile-menu-toggle" onclick="document.querySelector('.mobile-menu').classList.toggle('active')">
                        <span></span><span></span><span></span>
                    </button>
                </div>
            </div>
        </header>

        <!-- Mobile Menu -->
        <div class="mobile-menu">
            <nav class="mobile-nav">
                <a href="/" class="mobile-nav-link active">Trang Chủ</a>
                <a asp-action="DanhSachKhoaHoc" asp-controller="KhoaHocs" class="mobile-nav-link">Khóa Học</a>
                <a href="https://blog.28tech.com.vn/" class="mobile-nav-link">Blog</a>
                <a href="https://www.youtube.com/c/G%C3%A0L%E1%BA%A1iL%E1%BA%ADpTr%C3%ACnh" class="mobile-nav-link">YouTube</a>
            </nav>
            <div class="mobile-actions">
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <a href="/admin" class="btn-mobile">Trang Admin</a>
                    }
                    else
                    {
                        <a asp-controller="Users" asp-action="Index" class="btn-mobile">Tài khoản</a>
                        <a asp-controller="MyCourses" asp-action="Index" class="btn-mobile">Khóa học của tôi</a>
                    }
                    <a asp-controller="Account" asp-action="Logout" class="btn-mobile-outline">Đăng xuất</a>
                }
                else
                {
                    <a href="/account/login" class="btn-mobile">Đăng nhập ngay</a>
                }
            </div>
        </div>
    }

    <main role="main">
        @RenderBody()
    </main>

    <script>
        // Auto close mobile menu when clicking link
        document.querySelectorAll('.mobile-nav-link').forEach(link => {
            link.addEventListener('click', () => {
                document.querySelector('.mobile-menu').classList.remove('active');
            });
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>